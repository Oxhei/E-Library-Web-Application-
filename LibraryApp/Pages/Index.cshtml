<!-- Book Carousel JavaScript -->
<script>
    function showSlide(id, index) {
        const carousel = document.getElementById(id);
        const books = carousel.querySelectorAll('.book');
        const slideWidth = books[0].offsetWidth;
        carousel.style.transform = `translateX(-${index * slideWidth}px)`;
    }

    function nextSlide(id) {
        const carousel = document.getElementById(id);
        const books = carousel.querySelectorAll('.book');
        let currentIndex = (carousel.dataset.currentIndex || 0) * 1;
        currentIndex = (currentIndex + 1) % books.length;
        carousel.dataset.currentIndex = currentIndex;
        showSlide(id, currentIndex);
    }

    function prevSlide(id) {
        const carousel = document.getElementById(id);
        const books = carousel.querySelectorAll('.book');
        let currentIndex = (carousel.dataset.currentIndex || 0) * 1;
        currentIndex = (currentIndex - 1 + books.length) % books.length;
        carousel.dataset.currentIndex = currentIndex;
        showSlide(id, currentIndex);
    }
</script>