<!-- Book Carousel CSS-->
<style>
    .carousel-container {
        position: relative;
        width: 80%;
        margin: auto;
        overflow: hidden;
        padding: 0.6em;
    }

    .carousel {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .book {
        min-width: 200px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .book img {
            max-width: 100%;
            height: auto;
        }

    .carousel-btn {
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 24px;
        color: #333;
        background-color: transparent;
        border: none;
        outline: none;
    }

    .prev-btn {
        left: 10px;
    }

    .next-btn {
        right: 10px;
    }
</style>

