<!-- Book Carousel CSS-->
<style>
    .carousel-container {
        position: relative;
        width: 80%;
        margin: auto;
        overflow: hidden;
        padding: 0.6em;
    }

    .carousel {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .book {
        min-width: 200px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 1);
        text-align: center;
    }

        .book img {
    width: 100%;              /* Use 100% of the .book container width */
    height: 40vh;             /* Adjust the height to 20% of the viewport height */
    object-fit: fill;        /* Cover the area without stretching the image */
    display: block;           /* Prevent inline spacing */
    border-radius: 10px;      /* Round the edges with a 10px radius */
    width: 280px;
}



    .carousel-btn {
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 24px;
        color: #333;
        background-color: transparent;
        border: none;
        outline: none;
    }

    .prev-btn {
        left: 10px;
    }

    .next-btn {
        right: 10px;
    }
</style>


<!-- Carousel Display for Books  -->
@foreach (var cate in Model.categories)
{
    <div class="carousel-container">
        <h4>@cate.Name</h4>
        @{
            var bookCarouseId = "bookCarousel" + @cate.Id;
        }
        <div class="carousel" id=`@bookCarouseId`>
        @foreach (var book in Model.BookList.Where(x => x.BookCategoryId == cate.Id).ToList())
