@page "{id:int}"
@model LibraryApp.Pages.Books.EditBookModel
@{
    ViewData["Title"] = "Edit Book";
}
<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header">
                Edit Book<a class="btn btn-success btn-sm" asp-page="/Books/Index" style="float:right">Back</a>
            </div>
            <div class="card-body">

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="book!.Id" />
                    <input type="hidden" asp-for="book!.CategoryId" />
                    <div class="form-group">
                        <label for="CategoryId">Select Category</label>
                        <select class="form-control" disabled id="CategoryId" name="CategoryId">
                            <option selected>--select Category--</option>
                            @foreach (var cate in Model.CategoriesList)
                            {
                                <option selected="@Model.SelectedCate" value="@cate.Id">@cate.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Name">Title</label>
                        <input type="text" class="form-control" placeholder="Book Title..." asp-for="book!.Title" />
                    </div>
                    <div class="form-group">
                        <label for="Author">Author</label>
                        <input type="text" class="form-control" placeholder="Book Author..." asp-for="book!.Author" />
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Upload</label><br />
                        <img src="@Model.SelectedImage.Replace("\\","/")" width="50" height="50" />
                        <input type="file" asp-for="Upload" />
                    </div>
                    <button type="submit" class="btn btn-success btn-sm" style="float:right">Update</button>
                </form>
            </div>
        </div>

    </div>
</div>