@page
@model LibraryApp.Pages.Users.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}
<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header">
                Edit User<a class="btn btn-success btn-sm" asp-page="/Users/Index" style="float:right">Back</a>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="user!.Id" />
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" class="form-control" placeholder="User Fisrt Name..." asp-for="user!.FirstName" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Last Name</label>
                        <input type="text" class="form-control" placeholder="User Last Name..." asp-for="user!.LastName" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Email</label>
                        <input type="text" class="form-control" placeholder="User Email..." asp-for="user!.Email" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Password</label>
                        <input hidden asp-for="user!.Password" />
                        <input type="password" class="form-control" placeholder="User Password..." asp-for="user!.Password" />
                    </div>
                    <button type="submit" class="btn btn-success btn-sm" style="float:right">Update</button>
                </form>
            </div>
        </div>

    </div>
</div>