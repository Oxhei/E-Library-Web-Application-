@page
@model LibraryApp.Pages.Users.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}
<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header">
                Delete User<a class="btn btn-success btn-sm" asp-page="/Users/Index" style="float:right"> Back</a>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="user!.Id" />
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" disabled class="form-control" placeholder="Category Name..." asp-for="user!.FirstName" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Last Name</label>
                        <input type="text" disabled class="form-control" placeholder="Category Name..." asp-for="user!.LastName" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Email</label>
                        <input type="text" disabled class="form-control" placeholder="Category Name..." asp-for="user!.Email" />
                    </div>
                    <button type="submit" class="btn btn-danger btn-sm" style="float:right">Delete</button>
                </form>
            </div>
        </div>

    </div>
</div>