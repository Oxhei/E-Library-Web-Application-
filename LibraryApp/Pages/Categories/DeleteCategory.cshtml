@page
@model LibraryApp.Pages.Categories.DeleteCategoryModel
@{
    ViewData["Title"] = "Delete Category";
}
<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header">
                Delete Category
                <a asp-page="/Categories/Index" class="btn btn-sm btn-info" style="float:right">Back</a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="category!.Id" />
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" disabled class="form-control" id="Name" name="Name" placeholder="Enter Category Name">
                    </div>
                    <button type="submit" class="btn btn-danger btn-sm" style="float:right">Delete</button>
                </form>
            </div>
        </div>

    </div>
</div>